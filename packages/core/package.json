{
  "name": "@apollo-mock-operations/core",
  "author": "Frank Cooke",
  "description": "Core module utilized in intercepting and mocking requests for Apollo client",
  "keywords": [
    "typescript",
    "graphql",
    "apollo",
    "mock",
    "mocking",
    "storybook",
    "cypress",
    "jest",
    "testing",
    "next"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platypusrex/apollo-mock-operations.git"
  },
  "license": "MIT",
  "version": "0.3.2",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/dts/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:cjs": "swc src -d dist/cjs --config-file .swcrc -C module.type=commonjs",
    "build:esm": "swc src -d dist/esm --config-file .swcrc -C module.type=es6",
    "build:ts": "tsc --project tsconfig.type.json",
    "build": "pnpm run clean && concurrently \"pnpm run build:cjs\" \"pnpm run build:esm\" \"pnpm run build:ts\"",
    "clean": "rimraf dist",
    "clean:deps": "rimraf node_modules",
    "check:types": "tsc",
    "lint": "eslint src/**/*.ts"
  },
  "devDependencies": {
    "@apollo/client": "^3.7.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.74",
    "@types/node": "^20.4.8",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.2.7",
    "@types/stylis": "^4.2.0",
    "concurrently": "^8.2.0",
    "graphql": "^16.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@graphql-tools/merge": "^8.2.3",
    "@graphql-tools/mock": "^8.5.2",
    "@graphql-tools/utils": "^8.6.2",
    "deepmerge": "^4.2.2",
    "stylis": "^4.3.0"
  },
  "peerDependencies": {
    "@apollo/client": ">=3.x",
    "graphql": ">=16.x",
    "react": "17.x - 18.x",
    "react-dom": "17.x - 18.x"
  }
}
