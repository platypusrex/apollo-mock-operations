{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "declarationDir": "dist/dts",
    "outDir": "dist/dts",
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": [
    "dist/dts",
    "tests"
  ],
  "include": ["src/**/*"]
}
